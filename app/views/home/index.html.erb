<h1>RESTfull bookstore</h1>


<%= form_tag book_search_path, method: 'get' do %>
  <%= text_field_tag :search, params[:search], placeholder: "search by title or by author or by ISBN", size: '50px' %>
  <%= submit_tag "Search" %>
<% end %>

<%= link_to 'Sign Up', signup_path, method: :get %>
<%= link_to 'Login', login_path, method: :get %>
<%= link_to 'Orders', orders_path, method: :get %>
<%= link_to 'Books', books_path, method: :get %>